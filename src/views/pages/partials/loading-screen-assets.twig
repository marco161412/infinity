<!-- To eliminate all render blocking CSS & JS and start with the critical css-->
<!-- To show loader to the user till the page content are  loaded-->
<style>
  body .parent-loader{
    background: var(--color-background-body);
  }
  body.dark-mode .parent-loader{
    background: var(--color-dark-background-body);
  }
.parent-loader {
  position: fixed;
  z-index: 999999999;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.loader-card{
  display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height:100%;
}

.loader-1 {
  width: 120px;
  height: 20px;
  -webkit-mask: radial-gradient(circle closest-side, #000 94%, #0000) left/20% 100%;
  background: linear-gradient(var(--color-primary) 0 0) left/0% 100% no-repeat #ddd;
  animation: l17 1s infinite steps(6);
}

@keyframes l17 {
  100% {
    background-size: 120% 100%
  }
}
.gap10{
  gap:10px!important
}
</style>
 <script>

document.addEventListener("DOMContentLoaded", function() {
    const loader = document.getElementById("parent-loader");
    if (loader) {
        loader.style.display = "block";
        setTimeout(() => loader.style.display = "none", 800);
    }
});

</script>